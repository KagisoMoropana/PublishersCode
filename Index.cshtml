@model IEnumerable<ADMPublishers.DataAccess.Authors>

@{
    ViewData["Title"] = "Authors";
    ViewData["Message"] = "List of ADM Publishers authors";
}

<h1><i class="glyphicon glyphicon-transfer" style="font-size:medium"></i> @ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <h6>@ViewData["Message"]</h6>
    </div>
    <div class="col-md-6 text-right">
        <a asp-action="CaptureAuthor" class="btn btn-sm btn-success ">
            <i class="glyphicon glyphicon-plus-sign"></i> Add Author
        </a>
    </div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-12">
        <table class="table table-responsive table-condensed">
            <thead>
                <tr>
                    <th>
                        Author ID
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Address
                    </th>
                    <th>
                        City
                    </th>
                    <th>
                        State
                    </th>
                    <th>
                        Zip
                    </th>
                    <th>
                        Contract
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Au_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Au_LName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Au_FName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zip)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contract)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Au_Id" class="btn btn-sm btn-info ">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Au_Id" class="btn btn-sm btn-danger ">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>